@model IEnumerable<Crowd_Funding.Models.User>

@{
    ViewData["Title"] = "Index";
    int n = 1;
}

<div class="container" style="padding-top: 29px;">
    <div class="row">
        <div class="col">
            <h5>Users</h5>
        </div>
        <div class="col-md-6 col-lg-5 col-xl-5">
            <form method="get" action="@Url.Action("AdminSearch","Users")">
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text">Addon</span></div>
                    <input class="form-control" value="@ViewBag.Keyword"  name="Keyword" type="text" placeholder="Search . . ." />
                    <div class="input-group-append"><button class="btn btn-primary" type="submit">Go!</button></div>
                </div>
            </form>
            
        </div>
    </div>
</div>
<hr/>
<div class="container" style="padding-top: 20px;">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Available User List</h5>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width: 46px;">Sn.</th>
                        <th>User Name</th>
                        <th class="text-center" style="width: 110px;">Mobile</th>
                        <th class="text-center" style="width: 168px;">Email</th>
                        
                        
                        <th style="width: 90px;">Status</th>

                        <th class="text-right" style="width: 250px;">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @(n++)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td class="text-right">
                            <div class="btn-group btn-group-sm" role="group">
                                @if (!item.Status.Equals("Approved"))
                                {
                                    <a class="btn btn-sm btn-primary" asp-action="ChangeStatus" asp-route-id="@item.UID">Approve</a>
                                }
                                else
                                {
                                    <a class="btn btn-sm btn-warning" asp-action="ChangeStatus" asp-route-id="@item.UID">Reject</a>
                                }

                                <a class="btn btn-sm btn-info" asp-action="Document" asp-route-id="@item.UID">Document</a>
                                <a class="btn btn-sm btn-info" asp-action="Profile" asp-route-id="@item.UID">Profile</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.UID">Delete</a>
                            </div>
                           
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


